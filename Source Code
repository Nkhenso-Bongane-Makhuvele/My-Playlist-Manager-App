DetailActivity.kt


package vcmsa.ci.playlistmanagerapp

import android.content.Intent
import android.os.Bundle
import android.widget.Button
import android.widget.TextView
import androidx.appcompat.app.AppCompatActivity

class DetailActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_detail)

        val tvPlaylist = findViewById<TextView>(R.id.tvPlaylist)
        val btnAverage = findViewById<Button>(R.id.btnAverage)
        val btnBack = findViewById<Button>(R.id.btnBack)

        val songs = intent.getStringArrayListExtra("songs") ?: arrayListOf()
        val artists = intent.getStringArrayListExtra("artists") ?: arrayListOf()
        val ratings = intent.getFloatArrayExtra("ratings") ?: floatArrayOf()
        val comments = intent.getStringArrayListExtra("comments") ?: arrayListOf()

        val details = StringBuilder()
        for (i in songs.indices) {
            details.append("Song: ${songs[i]}\nArtist: ${artists[i]}\nRating: ${ratings[i]}\nComment: ${comments[i]}\n\n")
        }

        tvPlaylist.text = details.toString()

        btnAverage.setOnClickListener {
            if (ratings.isNotEmpty()) {
                val avg = ratings.sum() / ratings.size
                tvPlaylist.append("\nAverage Rating: %.1f".format(avg))
            }
        }

        btnBack.setOnClickListener {
            startActivity(Intent(this, MainActivity::class.java))
        }
    }
}
